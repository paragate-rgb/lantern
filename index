<script>
const logo = new Image();
logo.src = "dharma_logo.png"; // æ³•é¼“å±±å±±å¾½

function drawLantern() {
    const name = document.getElementById("name").value;
    const blessing = document.getElementById("blessing").value;

    const canvas = document.getElementById("canvas");
    const ctx = canvas.getContext("2d");

    // æ¸…ç©º
    ctx.clearRect(0, 0, canvas.width, canvas.height);

    // èƒŒæ™¯
    ctx.fillStyle = "#f8f1e7";
    ctx.fillRect(0, 0, canvas.width, canvas.height);

    // æ›ç¹©
    ctx.strokeStyle = "#6c584c";
    ctx.lineWidth = 6;
    ctx.beginPath();
    ctx.moveTo(300, 40);
    ctx.lineTo(300, 140);
    ctx.stroke();

    // ç‡ˆç± ä¸»é«”
    ctx.fillStyle = "#c1121f";
    ctx.beginPath();
    ctx.ellipse(300, 420, 210, 270, 0, 0, Math.PI * 2);
    ctx.fill();

    // é‡‘é‚Š
    ctx.fillStyle = "#f4c430";
    ctx.fillRect(150, 150, 300, 28);
    ctx.fillRect(150, 660, 300, 28);

    // æ³•é¼“å±±å±±å¾½
    if (logo.complete) {
        ctx.drawImage(logo, 260, 180, 80, 80);
    }

    // ç¥ç¦èªï¼ˆç›´æ’ï¼‰
    ctx.fillStyle = "white";
    ctx.font = "48px DFKai-SB";
    let yBless = 300;
    for (let char of blessing) {
        ctx.fillText(char, 285, yBless);
        yBless += 60;
    }

    // å§“åï¼ˆç›´æ’ï¼‰
    ctx.font = "36px DFKai-SB";
    let yName = 320;
    for (let char of name) {
        ctx.fillText(char, 345, yName);
        yName += 50;
    }
}

function download() {
    const canvas = document.getElementById("canvas");
    const link = document.createElement("a");
    link.download = "æ³•é¼“å±±ç¥ç¦ç´…ç‡ˆç± .png";
    link.href = canvas.toDataURL("image/png");
    link.click();
}
</script>

